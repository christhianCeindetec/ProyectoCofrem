<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColorWhite"
    android:paddingBottom="@dimen/appPaddingBottom"
    android:paddingLeft="@dimen/appPaddingLeft"
    android:paddingRight="@dimen/appPaddingRight"
    android:paddingTop="@dimen/appPaddingTop"
    tools:context=".GenericScreen.ui.GenericScreenActivity"
    android:orientation="vertical">

    <!--Header de los modulos-->
    <include
        android:id="@+id/headerContent"
        layout="@layout/content_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/appMarginBottom" />

    <Button
        android:id="@+id/btnMainScreenModuleTransaction"
        style="@style/StyleButtonStandar"
        android:layout_below="@id/headerContent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:layout_marginLeft="@dimen/appMarginLeft"
        android:layout_marginRight="@dimen/appMarginRight"
        android:text="@string/main_text_button_transaction" />

    <Button
        android:id="@+id/btnMainScreenModuleReport"
        style="@style/StyleButtonStandar"
        android:layout_below="@id/btnMainScreenModuleTransaction"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:layout_marginLeft="@dimen/appMarginLeft"
        android:layout_marginRight="@dimen/appMarginRight"
        android:text="@string/main_text_button_reports" />

    <Button
        android:id="@+id/btnMainScreenModuleConfiguration"
        style="@style/StyleButtonStandar"
        android:layout_below="@id/btnMainScreenModuleReport"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:layout_marginLeft="@dimen/appMarginLeft"
        android:layout_marginRight="@dimen/appMarginRight"
        android:text="@string/main_text_button_configuration" />
</RelativeLayout>