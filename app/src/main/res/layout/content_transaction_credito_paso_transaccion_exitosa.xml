<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvCreditoTransactionExitosaTitle"
        style="@style/StyleTextPrimaryLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/transaction_text_title_credito" />

    <TextView
        android:id="@+id/txvCreditoTransactionExitosaSubtitle"
        style="@style/StyleTextPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvCreditoTransactionExitosaTitle"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/transaction_text_exitosa" />

    <Button
        android:id="@+id/btnCreditoTransactionExitosaBotonImprimir"
        style="@style/StyleButtonPrint"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txvCreditoTransactionExitosaSubtitle"
        android:text="@string/general_text_button_imprimir" />

    <Button
        android:id="@+id/btnCreditoTransactionExitosaBotonSalir"
        style="@style/StyleButtonExit"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/btnCreditoTransactionExitosaBotonImprimir"
        android:text="@string/general_text_button_salir" />


</RelativeLayout>