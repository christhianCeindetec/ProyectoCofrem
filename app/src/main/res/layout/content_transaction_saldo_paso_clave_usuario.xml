<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvSaldoTransactionClaveUsuarioTitle"
        style="@style/StyleTextPrimaryLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/transaction_text_title_saldo" />

    <TextView
        android:id="@+id/txvSaldoTransactionClaveUsuarioClave"
        style="@style/StyleTextPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvSaldoTransactionClaveUsuarioTitle"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/general_text_clave_usuario" />

    <EditText
        android:id="@+id/edtSaldoTransactionClaveUsuarioContenidoClave"
        style="@style/StylePassPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvSaldoTransactionClaveUsuarioClave"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSaldoTransactionClaveUsuarioBotonCancelar"
        style="@style/StyleButtonCancel"
        android:layout_alignParentStart="true"
        android:layout_below="@id/edtSaldoTransactionClaveUsuarioContenidoClave"
        android:text="@string/general_text_button_cancelar" />

    <Button
        android:id="@+id/btnSaldoTransactionClaveUsuarioBotonAceptar"
        style="@style/StyleButtonAccept"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/edtSaldoTransactionClaveUsuarioContenidoClave"
        android:text="@string/general_text_button_aceptar" />


</RelativeLayout>