<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvSaldoTransactionExitosaTitle"
        style="@style/StyleTextPrimaryLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/transaction_text_title_saldo" />

    <TextView
        android:id="@+id/txvSaldoTransactionExitosaSubtitle"
        style="@style/StyleTextPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvSaldoTransactionExitosaTitle"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/transaction_text_exitosa" />

    <TextView
        android:id="@+id/txvSaldoTransactionExitosaSaldo"
        style="@style/StyleTextPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvSaldoTransactionExitosaSubtitle"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/transaction_text_saldo" />

    <TextView
        android:id="@+id/txvSaldoTransactionExitosaSaldoCantidad"
        style="@style/StyleTextPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txvSaldoTransactionExitosaSaldo"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/general_text_valor_cero" />

    <Button
        android:id="@+id/btnSaldoTransactionExitosaBotonImprimir"
        style="@style/StyleButtonPrint"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txvSaldoTransactionExitosaSaldoCantidad"
        android:text="@string/general_text_button_imprimir" />

    <Button
        android:id="@+id/btnSaldoTransactionExitosaBotonSalir"
        style="@style/StyleButtonExit"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/btnSaldoTransactionExitosaBotonImprimir"
        android:text="@string/general_text_button_salir" />


</RelativeLayout>